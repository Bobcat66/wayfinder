{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "camera_intrinsics",
    "type": "object",
    "properties": {
        "resolution": {
            "type": "object",
            "properties": {
                "width": { "type": "number" },
                "height": { "type": "number" }
            },
            "required": ["width","height"],
            "additionalProperties": false
        },
        "matrix": {
            "type": "object",
            "properties": {
                "fx": { "type": "number" },
                "fy": { "type": "number" },
                "cx": { "type": "number" },
                "cy": { "type": "number" }
            }
        },
        "distortion": {
            "type": "array",
            "items": { "type": "number" },
            "minItems": 5,
            "maxItems": 8
        }
    },
    "required": [
        "resolution",
        "matrix",
        "distortion"
    ],
    "additionalProperties": false
}