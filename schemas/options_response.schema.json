{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "options_response.schema.json",
    "title": "HTTP OPTIONS response",
    "properties": {
        "supportedMethods": {
            "type": "array",
            "items": { "type": "string" }
        },
        "specialCases": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "url": {"type": "string"},
                    "supportedMethods": {
                        "type": "array",
                        "items": { "type": "string" }
                    }
                },
                "required": ["url","supportedMethods"],
                "additionalProperties": false
            }
        }
    },
    "required": ["supportedMethods"],
    "additionalProperties": false
}