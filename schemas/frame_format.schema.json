{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "frame_format.schema.json",
    "title": "Frame Format",
    "type": "object",
    "definitions": {
        "image_encoding": {
            "type": "string",
            "enum": [
                "BGR24",
                "RGB24",
                "RGB565",
                "Y8",
                "Y16",
                "YUYV",
                "UYVY",
                "RGBA",
                "BGRA",
                "MJPEG",
                "UNKNOWN"
            ]
        }
    },
    "properties": {
        "width": { "type": "number" },
        "height": { "type": "number" },
        "encoding": { "$ref": "#/definitions/image_encoding" }
    },
    "required": [
        "width",
        "height",
        "encoding"
    ],
    "additionalProperties": false
}