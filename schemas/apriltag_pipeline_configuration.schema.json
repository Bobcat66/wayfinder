{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "apriltag_pipeline_configuration.schema.json",
    "title": "Apriltag Pipeline Configuration",
    "type": "object",
    "definitions": {
        "apriltag_detector_config": {
            "type": "object",
            "properties": {
                "numThreads": { "type": "number" },
                "quadDecimate": { "type": "number" },
                "quadSigma": { "type": "number" },
                "refineEdges": { "type": "boolean" },
                "decodeSharpening": { "type": "number" },
                "debug": { "type": "boolean" }
            },
            "additionalProperties": false
        },
        "quad_threshold_parameters": {
            "type": "object",
            "properties": {
                "minClusterPixels": { "type": "number" },
                "maxNumMaxima": { "type": "number" },
                "criticalAngleRads": { "type": "number" },
                "maxLineFitMSE": { "type": "number" },
                "minWhiteBlackDiff": { "type": "number" },
                "deglitch": { "type": "boolean" }
            },
            "additionalProperties": false
        }
    },
    "properties": {
        "solvePnP": { "type": "boolean" },
        "detConfig": { "$ref": "#/definitions/apriltag_detector_config" },
        "detQTPs": { "$ref": "#/definitions/quad_threshold_parameters"},
        "tagField": { "type": "string" },
        "tagFamily": { "type": "string" },
        "tagSize": { "type": "number" },
        "detectorExcludes": {
            "type": "array",
            "items": { "type": "number" }
        },
        "solvePnPExcludes": {
            "type": "array",
            "items": { "type": "number" }
        },
        "solveTagRelative": { "type": "boolean" }
    },
    "additionalProperties": false
}