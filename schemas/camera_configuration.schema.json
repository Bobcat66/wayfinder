{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "camera_configuration.schema.json",
    "title": "Camera configuration",
    "type": "object",
    "definitions": {
        "control_name": {
            "type": "string",
            "enum": [
                "EXPOSURE",
                "AUTO_EXPOSURE",
                "BRIGHTNESS",
                "ISO",
                "SHUTTER",
                "FOCUS",
                "ZOOM",
                "WHITE_BALANCE",
                "AUTO_WHITE_BALANCE",
                "SHARPNESS",
                "SATURATION",
                "CONTRAST",
                "GAMMA",
                "HUE"
            ]
        },
        "camera_intrinsics": {
            "type": "object",
            "properties": {
                "resolution": {
                    "type": "object",
                    "properties": {
                        "width": { "type": "number" },
                        "height": { "type": "number" }
                    },
                    "required": ["width","height"],
                    "additionalProperties": false
                },
                "matrix": {
                    "type": "object",
                    "properties": {
                        "fx": { "type": "number" },
                        "fy": { "type": "number" },
                        "cx": { "type": "number" },
                        "cy": { "type": "number" }
                    }
                },
                "distortion": {
                    "type": "array",
                    "items": { "type": "number" },
                    "minItems": 5,
                    "maxItems": 8
                }
            },
            "required": [
                "resolution",
                "matrix",
                "distortion"
            ],
            "additionalProperties": false
        }
    },
    "properties": {
        "nickname": { "type": "string" },
        "devpath": { "type": "string" },
        "backend": { 
            "type": "string", 
            "enum": [
                "CSCORE",
                "REALSENSE",
                "GSTREAMER",
                "LIBCAMERA"
            ] 
        },
        "format": { "$ref": "stream_format.schema.json" },
        "controlAliases": {
            "type": "object",
            "propertyNames": { "$ref": "#/definitions/control_name" },
            "additionalProperties": { "type": "string" }
        },
        "calibrations": {
            "type": "array",
            "items": { "$ref": "#/definitions/camera_intrinsics" }
        },
        "controls": {
            "type": "object",
            "propertyNames": { "$ref": "#/definitions/control_name" },
            "additionalProperties": { "type": "number" }
        }
    },
    "required": [
        "nickname",
        "devpath",
        "backend",
        "format",
        "controlAliases"
    ],
    "additionalProperties": false
}